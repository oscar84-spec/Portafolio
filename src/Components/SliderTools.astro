<div class="slider-tools">
  <div class="slider-tools__slide-track"></div>
</div>
<script is:inline type="module">
  const carruselData = [
    {
      name: "Bash",
      src: "/logos/bash_dark.svg",
    },
    {
      name: "Figma",
      src: "/logos/figma.svg",
    },
    {
      name: "Github",
      src: "/logos/github_dark.svg",
    },
    {
      name: "VSCode",
      src: "/logos/vscode.svg",
    },
    {
      name: "Ubuntu",
      src: "/logos/ubuntu.svg",
    },
    {
      name: "v0",
      src: "/logos/v0_dark.svg",
    },
    {
      name: "Slack",
      src: "/logos/slack.svg",
    },
    {
      name: "Vercel",
      src: "/logos/vercel_dark.svg",
    },
    {
      name: "PowerShell",
      src: "/logos/powershell.svg",
    },
  ];

  const slideTrack = document.querySelector(".slider-tools__slide-track");

  const slideTemplate = (data) => `
    <div class="slider-tools__slide">
      <span class="slider-tools__tag">${data.name}</span>
        <img src="${data.src}" alt="${data.name}" class="slider-tools__logo" />
    </div>
`;

  const carruselCards = [...carruselData, ...carruselData]
    .map((data) => slideTemplate(data))
    .join("");

  slideTrack.insertAdjacentHTML("beforeend", carruselCards);
</script>
