<div class="tools__slider">
  <div class="tools__slide-track"></div>
</div>
<script is:inline type="module">
  const carruselData = [
    {
      name: "Html",
      src: "/logos/html5.svg",
    },
    {
      name: "Css",
      src: "/logos/css_old.svg",
    },
    {
      name: "JavaScript",
      src: "/logos/javascript.svg",
    },
    {
      name: "React",
      src: "/logos/react_light.svg",
    },
    {
      name: "TailwindCSS",
      src: "/logos/tailwindcss.svg",
    },
    {
      name: "ExpressJS",
      src: "/logos/expressjs_dark.svg",
    },
    {
      name: "Git",
      src: "/logos/git.svg",
    },
    {
      name: "Php",
      src: "/logos/php_dark.svg",
    },
    {
      name: "NodeJS",
      src: "/logos/nodejs.svg",
    },
  ];

  const slideTrack = document.querySelector(".tools__slide-track");

  const slideTemplate = (data) => `
    <div class="tools__slide">
      <span class="tools__tag">${data.name}</span>
        <img src="${data.src}" alt="${data.name}" class="tools__logo" />
    </div>
`;

  const carruselCards = [...carruselData, ...carruselData]
    .map((data) => slideTemplate(data))
    .join("");

  slideTrack.insertAdjacentHTML("beforeend", carruselCards);
</script>
